{
    "defaultSeverity": "error",
    "extends": [
        "tslint:recommended",
        "tslint-react"
    ],
    "rules": {
        "quotemark": [
            true,
            "single",
            "avoid-escape",
            "avoid-template"
        ],
        "jsx-no-lambda": false,
        "jsx-no-multiline-js": false
    },
    "jsRules": {
        "quotemark": [
            true,
            "single"
        ]
    },
    "rulesDirectory": []
}
